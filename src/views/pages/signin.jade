extends ../layout

block page_header
    link(rel='stylesheet', href='/sign.css')

block content
    div(class="page vertical-align text-xs-center")
        div(class="page-content vertical-align-middle")
            div(class="brand")
                // img(class="brand-img", src="/img/brand/logo.jpg")
                h2(class="brand-text") Galaxy

            p Sign in to find interesting thing

            form(method="post")
                div(class="form-group")
                    label(class="sr-only", for="email") Email
                    input(class="form-control", name="email", type="text", id="email", placeholder="youremail@mail.com", autofocus="true")

                div(class="form-group")
                    label(class="sr-only", for="password") Password
                    input(class="form-control", name="password", type="password", id="password", placeholder="Password")

                button(class="btn btn-primary btn-block") Sign in

            if locals.errorMessage
                div(class="alert dark alert-danger alert-dismissible") #{locals.errorMessage}

            p Still no account? Please go to &nbsp;
                a(href="/signup") Sign Up