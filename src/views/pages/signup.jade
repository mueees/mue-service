extends ../layout

block page_header
    link(rel='stylesheet', href='/sign.css')

block content
    div(class="page vertical-align text-xs-center")
        div(class="page-content vertical-align-middle")
            div(class="brand")
                // img(class="brand-img", src="/img/brand/logo.jpg")
                h2(class="brand-text") Galaxy

            p Sign up to find interesting thing

            form(method="post")
                div(class="form-group")
                    label(class="sr-only", for="email") Email
                    input(class="form-control", name="email", type="text", id="email", placeholder="youremail@mail.com", autofocus="true")

                div(class="form-group")
                    label(class="sr-only", for="password") Password
                    input(class="form-control", name="password", type="password", id="password", placeholder="Password")

                div(class="form-group")
                    label(class="sr-only", for="confirm-password") Confirm password
                    input(class="form-control", name="confirmPassword", type="password", id="confirm-password", placeholder="Confirm Password")

                button(class="btn btn-primary btn-block") Sign up

            if locals.errorMessage
                div(class="alert dark alert-danger alert-dismissible") #{locals.errorMessage}

            if locals.successMessage
                div(class="alert dark alert-success alert-dismissible") #{locals.successMessage}

            p Have account already? Please go to &nbsp;
                a(href="/signin") Sign In